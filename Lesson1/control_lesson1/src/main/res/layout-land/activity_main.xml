<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0E1621">

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#17212B"
        android:text="Терминатор (1984)"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="311dp"
        android:layout_height="314dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/terminator" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="«Термина́тор» (англ. The Terminator) — американский научно-фантастический боевик 1984 года, второй полнометражный фильм режиссёра Джеймса Кэмерона, написанный Кэмероном и Гейл Энн Хёрд по сценарию и спродюсированный самой Хёрд."
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="Режиссёр: Джеймс Кэмерон"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:text="2029 год, мрачное будущее, идёт война человечества и цивилизации машин. Действие переносится в настоящее (1984 год). Ночью где-то в Лос-Анджелесе водитель мусоровоза видит необъяснимые скачки молний, сплетаясь они образуют сферу из которой появляется обнажённый мужчина — Терминатор. Терминатор встречает троих панков и требует отдать ему одежду..."
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView">

    </LinearLayout>

    <Button
        android:id="@+id/button3"
        android:layout_width="312dp"
        android:layout_height="51dp"
        android:layout_weight="1"
        android:backgroundTint="#6AB3F3"
        android:text="Смотреть онлайн (1080р)"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="-1dp"
        tools:layout_editor_absoluteY="355dp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="198dp"
        android:layout_height="47dp"
        android:layout_weight="1"
        android:backgroundTint="#6AB3F3"
        android:text="Трейлер"
        android:textSize="20sp"
        android:textStyle="italic"
        tools:layout_editor_absoluteX="415dp"
        tools:layout_editor_absoluteY="359dp" />
</androidx.constraintlayout.widget.ConstraintLayout>